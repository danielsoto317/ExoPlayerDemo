<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    >

    <com.google.android.material.slider.Slider
        android:id="@+id/sliderBackground"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="0dp"
        android:insetTop="0dp"
        android:insetBottom="0dp"
        android:indeterminate="false"
        android:valueFrom="0"
        android:valueTo="100"
        android:value="10"
        app:trackHeight="14dp"
        app:labelBehavior="gone"
        app:thumbColor="@android:color/transparent"
        app:haloColor="@android:color/transparent"
        app:thumbStrokeColor="@android:color/transparent"
        app:thumbRadius="0dp"
        app:haloRadius="0dp"
        app:trackColorActive="#AFE7FF"
        app:trackColorInactive="#AFE7FF "
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.google.android.material.slider.Slider
        android:id="@+id/sliderProgress"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="0dp"
        android:insetTop="0dp"
        android:insetBottom="0dp"
        android:indeterminate="false"
        android:valueFrom="0"
        android:valueTo="100"
        app:trackHeight="8dp"
        app:labelBehavior="gone"
        app:trackColorActive="#AFE7FF"
        app:trackColorInactive="#FFFFFF"
        app:thumbColor="@android:color/transparent"
        app:haloColor="@android:color/transparent"
        app:thumbStrokeColor="@android:color/transparent"
        app:thumbRadius="0dp"
        app:haloRadius="0dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <RelativeLayout
        android:id="@+id/commentsLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingVertical="2dp"
        app:layout_constraintTop_toBottomOf="@id/sliderBackground"
        app:layout_constraintEnd_toEndOf="@id/sliderBackground"
        app:layout_constraintStart_toStartOf="@id/sliderBackground"
        >


    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>